<Window x:Class="szubienica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:szubienica"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Category: " FontSize="30" FontWeight="Black" x:Name="categoryTextBlock" Typography.Capitals="AllPetiteCaps"/>
        <Image Grid.Row="1" Source="images/image0.png" x:Name="gallowsImage"/>
        <UniformGrid Grid.Row="2" Columns="20" Rows="5" x:Name="windowsSpaceUniformGrid">
        </UniformGrid>
    </Grid>
</Window>
